@model SysPatrimonio.Models.DbLocal

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="site.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<style>
td:first-child {
    width: 200px
}

td:first-child + td {
        width: 150px
}

td:first-child + td + td {
            width: 120px
}

</style>

</head>
<body>
    <div class="container">
		<div class="table-responsive" >
			<div class="table-wrapper" >
				<div class="table-title">
					<div class="row">
						<div class="col-xs-6">
							<h2>Adicionar local</h2>
						</div>
					</div>
				</div>
				<table class="table table-striped table-hover">
                        <tr>
                         <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group col-4">
                                <label asp-for="nomelocal" class="control-label">Nome</label>
                                <input asp-for="nomelocal" class="form-control" />
                                <span asp-validation-for="nomelocal" class="text-danger"></span>
                            </div>
                            <div class="form-group col-4">
                                <label asp-for="descricaolocal" class="control-label">Descrição</label>
                                <input asp-for="descricaolocal" class="form-control" />
                                <span asp-validation-for="descricaolocal" class="text-danger"></span>
                            </div>
                            <div class="form-group " style="margin-top: 10px; text-align:right; width:33%;">
                                <a asp-action="Index" class=" btn btn-warning">Voltar</a>
                                <input type="submit" value="Criar" class="btn btn-primary"  />
                            </div>
                        </form>
                    </tr>
		         </table>
			</div>
		</div>        
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
