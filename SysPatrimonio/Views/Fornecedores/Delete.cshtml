@model SysPatrimonio.Models.DbFornecedor

@{
    ViewData["Title"] = "Delete";
}
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="site.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>
    <div class="container">
		<div class="table-responsive">
			<div class="table-wrapper">
				<div class="table-title">
					<div class="row">
						<div class="col-xs-6">
							<h2>Quer mesmo deletar o fornecedor @Html.DisplayFor(model => model.nomefornecedor)?</h2>
						</div>
	
					</div>
				</div>

                <dl class="row">
                    <dt class = "col-sm-2">
                        Nome
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.nomefornecedor)
                     <dt class = "col-sm-2">
                        Endereço
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.endereco)
                    </dd>
                     <dt class = "col-sm-2">
                        Elefone
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.fone)
                    </dd>
                </dl>
                <form asp-action="Delete" class="col-4" style="text-align:right;">
                    <input type="hidden" asp-for="id" />
                    <a asp-action="Index" class="btn btn-warning" >Voltar</a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
			</div>
		</div>        
    </div>
</body>
